{% set meta, node = resource.meta, resource.node %}
<!doctype html>
<html class="no-js">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width; initial-scale=1.0">

    <title>{{meta.title|default('')}} @ CLOUD PANIC</title>
    <meta name="description" content="{{meta.description}}">
    <meta name="keywords" content="{{ meta.keywords|default(keywords) }}">
    <meta name="author" content="{{meta.author}}">

    <link rel="icon" type="image/png" href="{{media_url('img/favicon.png')}}">
    <link rel="stylesheet" href="{{media_url('css/style.css?v=4')}}">

    {% block css %}{% endblock %}

    <!-- CSS scripting & LabJS only-->
    <script src="{{media_url('js/head.min.js')}}"></script>
</head>


<body>
    <div id="wrap" class="{{ 'panic' if meta.panic else 'cloud' }}">

        <a href="{{content_url('/about.html')}}" id="logo" title="About Cloudpanic">
            <strong>!!</strong> cloudpanic
            <em>Technologies to master. Crap to ignore.</em>
        </a>
        {% block story %}{% endblock %}
        {% include "nav.j2" %}
    </div>

    <div id="footer">
        <a href="{{content_url('/about.html')}}">About</a> &bull;
        <a href="http://www.flickr.com/photos/55014838@N08/galleries/72157625062868131/">Photo credits</a> &bull;
        <a href="http://github.com/tipiirai/cloudpanic">Source code</a> (Github)</a>
    </div>

    <script>
    head.js("/media/js/site.js")
         .js("http://platform.twitter.com/widgets.js")
         .js("http://www.google-analytics.com/ga.js", function() {
        {% if meta.analytics %}
            var tracker = _gat._getTracker("{{meta.analytics}}");
            tracker._trackPageview();
        {% endif %}
    });
    </script>

</body>

</html>


